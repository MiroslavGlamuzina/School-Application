<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="activity.Paint_Activity" >

    <LinearLayout
        android:id="@+id/canvas"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="14" >

        <Button
            android:id="@+id/colorbtn_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="RED" />

        <Button
            android:id="@+id/colorbtn_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="BLUE" />

        <Button
            android:id="@+id/colorbtn_green"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="GREEN" />

        <Button
            android:id="@+id/colorbtn_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="YELW" />

        <Button
            android:id="@+id/colorbtn_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="WHITE" />

        <Button
            android:id="@+id/paint_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="DEL" />

        <Button
            android:id="@+id/paint_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SAV" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="16" >

        <ImageButton
            android:id="@+id/paint_size_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/paint_size_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/ic_launcher"
            android:clickable="true" />
    </LinearLayout>

</LinearLayout>