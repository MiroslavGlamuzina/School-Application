<LinearLayout
    android:id="@+id/ll_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="activity.Paint_Activity">

    <LinearLayout
        android:id="@+id/notes_header"
        android:layout_width="match_parent"
        android:background="#FF38356C"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="12">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="&lt;-"/>

        <TextView
            android:id="@+id/notes_lecturetitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="Untitled Lecture"/>

        <ImageButton
            android:id="@+id/notes_audiotoggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/mic_two"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:padding="5dp">

        <ScrollView
            android:id="@+id/notes_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/notes_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notes_footer"
        android:background="#FF38356C"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="16">

        <EditText
            android:id="@+id/notes_et"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:focusable="false"
            android:hint="+Take a Note"
            />

        <Button
            android:id="@+id/notes_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="subt."/>

        <ImageButton
            android:id="@+id/notes_flag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/flag_two"
            />

        <ImageButton
            android:id="@+id/notes_draw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/pencil"/>

        <ImageButton
            android:id="@+id/notes_camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/camera"/>

        <ImageButton
            android:id="@+id/notes_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/vid"/>
    </LinearLayout>

</LinearLayout>